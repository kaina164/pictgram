<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col_mod_offset-4 col_md_4 users-new-container">
        <h1 class="text_center text-white">Log in</h1>
        <%= form_for :session, url: login_path do |f| %>
          <div class="form-group">
            <%= f.label :email, class: "text-white" %>
            <%= f.text_field :email, class: "form_control" %>
          </div>
          <div class="form-froup">
            <%= f.label :password, class: "text-white" %>
            <%= f.password_field :password, class: "form_control" %>
          </div>
          
          <%= f.submit "ログイン", class: "btn-block btn-white" %>
        <% end %>
      </div>
    </div>
  </div>
</div>